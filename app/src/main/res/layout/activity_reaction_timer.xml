<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/icon_margin"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:id="@+id/start_signal"
        android:textColor="@color/third_color"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reflex_button"
        android:src="@drawable/custom_reflex_button"
        android:background="@null"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/icon_margin"
        android:layout_gravity="center_horizontal"
        android:id="@+id/reflex_result"
        android:text=""
        android:textColor="@color/third_color"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="RESTART"
        android:id="@+id/restart_button"
        android:layout_gravity="center_horizontal"
        android:enabled="true"
        android:visibility="invisible"
        android:textColor="@color/header_title_color"
        android:background="@drawable/custom_reply_button" />

</LinearLayout>
