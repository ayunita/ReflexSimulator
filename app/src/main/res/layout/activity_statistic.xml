<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/second_color"
            android:padding="@dimen/header_margin"
            android:text="@string/title_activity_single_player"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/header_title_color" />

        <TextView
            android:id="@+id/stats_result1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/first_color"
            android:lineSpacingExtra="1sp"
            android:padding="@dimen/header_margin"
            android:text=""
            android:textColor="@color/header_title_color" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/third_color"
            android:padding="@dimen/header_margin"
            android:text="@string/title_activity_gameshow"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/header_title_color" />

        <TextView
            android:id="@+id/stats_result2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/forth_color"
            android:lineSpacingExtra="1sp"
            android:padding="@dimen/header_margin"
            android:text=""
            android:textColor="@color/header_title_color" />

    </LinearLayout>


</ScrollView>
