<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yunita.reflexsimulator" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReactionTimerActivity"
            android:label="@string/title_activity_single_player"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".GameshowActivity"
            android:label="@string/title_activity_gameshow"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".StatisticActivity"
            android:label="@string/title_activity_statistic"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".InstructionDialog"
            android:label="@string/title_activity_instruction_dialog"
            android:parentActivityName=".ReactionTimerActivity" >
        </activity>
        <activity
            android:name=".InstructionActivity"
            android:label="@string/title_activity_instruction"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".ListPlayerDialog"
            android:label="@string/title_activity_list_player_dialog" >
        </activity>
    </application>

</manifest>
